{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    // from https://github.com/oven-sh/bun/tree/main/packages/bun-types#usage
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "types": ["bun-types"]
  },
  "typeRoots": [
    "./node_modules/@types",
    "./global-types"
  ],
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/.*rc.js",
    "**/*.mjs",
    "**/*.cjs"
  ],
  "exclude": [
    "**/*.test.*",
    "node_modules",
    "dist",
    "public",
    "coverage"
  ]
}
